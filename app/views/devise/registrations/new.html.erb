<h2>Registrar</h2>

<body class="text-center">
  <main class="form-signin">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :username, placeholder: "Nombre de Usuario" %>
        <%= f.input :name, label: "Nombres", placeholder: "Nombre" %>
        <%= f.input :lastname, label: "Apellidos", placeholder: "Apellidos" %>

        <%= f.label :image %>
        <%= f.file_field :image,  class:"form-control" %>
        <%= f.hidden_field :image_cache %>


        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, placeholder: "name@example.com"%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, placeholder:"Password" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" }, placeholder:"Password" %>
      </div>

      <div class="form-actions">
        <button class="w-100 btn btn-lg btn-primary"><%= f.button :submit, "Registrar" %></button>
      </div>

    <% end %>

    <br><br>

    <%= render "devise/shared/links" %>

  </main>
</body>