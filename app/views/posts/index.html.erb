
<div class=container>

<div class="col-md-6 col-md-offset-3">
  <div class="row">

    <%if @posts.count == 0 %>
      <h1>No se encontraron post</h1>
    <%else%>

        <div class="col-8"></div>
        <% @posts.each do |post|  %>

          <div class="insta-post">
            <div class="post-meta "%>
              <%= image_tag post.user.image.thumb.url, class: "img img-fluid" %>
              <strong><%= link_to post.user.username, user_path(post.user.id), class: "text-dark" %></strong><br>
              <%= image_tag post.image.url, class:"post-show" %>


          <div class="post-details">
            <strong><%= link_to post.user.username, user_path(post.user.id), class: "text-dark" %></strong><br>
            <br><%= simple_format post.description %>
          </div>
            </div>
          </div>
        <%end%>
    <%end%>
  </div>
</div>
</div>
</div>
